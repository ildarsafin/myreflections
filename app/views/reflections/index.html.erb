<table class="border--round table--alternate-row">
  <thead>
    <tr>
      <th style="width: 80%">Reflection</th>
      <th style="width: 20%">Day</th>
    </tr>
  </thead>
  <tbody>
    <% @reflections.each do |reflection| %>
      <tr>
        <td><%= reflection.content.html_safe %></td>
        <td><%= reflection.created_at.strftime("%d.%m.%Y at %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
