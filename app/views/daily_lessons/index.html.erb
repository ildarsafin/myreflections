<table class="border--round table--alternate-row">
  <thead>
    <tr>
      <th style="width: 80%">Daily Lessons</th>
      <th style="width: 20%">Day</th>
    </tr>
  </thead>
  <tbody>
    <% @daily_lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.content.html_safe %></td>
        <td><%= lesson.created_at.strftime("%d.%m.%Y at %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
