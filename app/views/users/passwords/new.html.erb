<div class="container pos-vertical-center">
  <div class="row">
    <div class="col-md-7 col-lg-5">
      <h2>Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="col-md-12">
          </div>
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your email" %>
          </div>
          <div class="col-md-12">
            <%= f.submit "Send me reset password instructions", class: "btn btn--primary type--uppercase" %>
          </div>
        </div>
        <!--end of row-->
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
  <!--end of row-->
</div>
<!--end of container-->
